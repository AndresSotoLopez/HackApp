<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HackApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/BackgrounColor</item>
    </style>

    <style name="Theme.HackApp" parent="Base.Theme.HackApp" />

    <style name="dialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_out_animation</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_width">100sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/login_edittext_shape</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColorHint">@color/gris_HackAPP</item>
        <item name="android:fontFamily">@font/karma_medium</item>
    </style>

    <style name="SpinnerStyleSeverity" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_width">100sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/transparent_button_color_999999</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">@color/gris_HackAPP</item>
        <item name="android:fontFamily">@font/karma_medium</item>
    </style>


</resources>